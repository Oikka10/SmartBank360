<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.CustomerDashboardController">
    <top>
        <HBox spacing="10" style="-fx-background-color: #2C3E50;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="SmartBank360 – Customer Panel"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="logoutBtn" text="Logout"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="🎉 Welcome, [Customer Name]" fx:id="welcomeLabel" style="-fx-font-size: 18px;"/>

            <HBox spacing="20" alignment="CENTER">
                <Button text="💼 Create Account" fx:id="createAccBtn"/>
                <Button text="💸 View Balance" fx:id="viewBalanceBtn"/>
                <Button text="📝 Request Service" fx:id="requestServiceBtn"/>
                <Button text="👤 My Profile" onAction="#openProfile"/>
                <Button text="🔔 View Notifications" fx:id="notifBtn" onAction="#showNotifications"/>
                <Button text="🧾 View History" onAction="#openTransactionHistory"/>
                <Button text="💳 Card Request" onAction="#openCardRequest"/>
                <Button text="💰 Loan Request" onAction="#openLoanRequest"/>



            </HBox>

            <Label text="🧾 Recent Activity / Notifications" style="-fx-font-weight: bold;"/>
            <TextArea fx:id="activityArea" prefRowCount="6" prefWidth="500" editable="false"/>
        </VBox>
    </center>
</BorderPane>
