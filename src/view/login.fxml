<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.LoginController"
            prefWidth="1000.0" prefHeight="650.0"
            style="-fx-background-color: white;">

    <HBox prefWidth="1000" prefHeight="650">

        <VBox alignment="CENTER" prefWidth="600" prefHeight="650"
              style="-fx-background-color: white;">
            <ImageView fx:id="bankLogo" fitWidth="750" fitHeight="350" preserveRatio="true"/>
            <Label text="Secure. Fast. Smart â€“ SmartBank360"
                   style="-fx-font-size: 18; -fx-text-fill: black; -fx-font-weight: bold; -fx-padding: 20 0 0 0;"/>
        </VBox>

        <VBox alignment="CENTER" spacing="20" prefWidth="400" prefHeight="650"
              style="-fx-background-color: #431f8c;">
            <VBox alignment="CENTER" spacing="20">

                <Label text="Sign In" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;" />

                <HBox alignment="CENTER_LEFT" spacing="10"
                      style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 25; -fx-padding: 8; -fx-pref-width: 300;">
                    <Label text="   ðŸ‘¤" style="-fx-text-fill: white; -fx-font-size: 16;" />
                    <TextField fx:id="usernameField" promptText="Username" styleClass="login-field" style="-fx-background-color: transparent; -fx-text-fill: white;" HBox.hgrow="ALWAYS"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10"
                      style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 25; -fx-padding: 10; -fx-pref-width: 300;">
                    <Label text="   ðŸ”’" style="-fx-text-fill: white; -fx-font-size: 16;" />
                    <PasswordField fx:id="passwordField" promptText="Password"
                                   styleClass="login-field" style="-fx-background-color: transparent; -fx-text-fill: white;"
                                   HBox.hgrow="ALWAYS" visible="true" managed="true"/>
                    <TextField fx:id="visiblePasswordField" promptText="Password"
                               styleClass="login-field" style="-fx-background-color: transparent; -fx-text-fill: white;"
                               HBox.hgrow="ALWAYS" visible="false" managed="false"/>
                    <ImageView fx:id="eyeIcon" fitWidth="20" fitHeight="20" pickOnBounds="true" preserveRatio="true"
                               style="-fx-cursor: hand;" />
                </HBox>

                <Button fx:id="loginButton" text="Login" styleClass="glow-button" style="-fx-pref-width: 300;"/>
            </VBox>
            <HBox alignment="CENTER" spacing="5">
                <Label text="Don't have an account?" style="-fx-text-fill: white;"/>
                <Hyperlink fx:id="registerLink" text="Register"/>
            </HBox>

            <Label text="Powered by The Last Five"
                   style="-fx-text-fill: white; -fx-font-size: 12; -fx-opacity: 0.9; -fx-padding: 80 0 0 0;"/>
        </VBox>
    </HBox>
</AnchorPane>